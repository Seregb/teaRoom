<script defer src="/js/tea.js"></script>
<div class="card mb-3" style="max-width: 2540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="/{{img}}" class="img-fluid rounded-start" alt="tea_Photo">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h4 class="card-title">{{this.name}}</h4>
        <p class="card-text">{{this.description}}</p>
      </div>
    </div>
  </div>
</div>
<div class="card mb-3" style="max-width: 1540px;">Comments
  <div>
    <div class="col-ml-8">
      <div class="card-body">
        <div class="input-group mb-3">
          <form id="commentForm" name="commentForm" class="commentText" action="/users/{{this.id}}" method="POST">
            <input name="comment" type="text" class="form-control" placeholder="Recipient's username"
              aria-label="Recipient's username" aria-describedby="button-addon2">
            <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Отправить</button>
          </form>
        </div>
        <p class="card-text"><small class="text-muted">Последнее обновление 1 мин. назад</small></p>
      </div>
    </div>
  </div>
</div>
